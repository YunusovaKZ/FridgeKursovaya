<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FridgeKursovaya.Recept">
    <StackLayout>
        <Label Text="Добавить" FontSize="40" TextColor="#00ffff" HorizontalOptions="CenterAndExpand"/>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry x:Name="entName" Placeholder="Введите название" HorizontalOptions="CenterAndExpand" TextColor="#006666"/>
            <Editor x:Name="entDesc" Placeholder="Введите описание" HorizontalOptions="CenterAndExpand" TextColor="#006666"/>
            <Entry x:Name="entImage" Placeholder="Введите изображения" HorizontalOptions="CenterAndExpand" TextColor="#006666"/>
            <Button x:Name="btnAdd" Text="Добавить" HorizontalOptions="CenterAndExpand" TextColor="#00ffff" BackgroundColor="#006666" Clicked="btnAdd_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>